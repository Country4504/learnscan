
<div class="card shadow-sm">
  <div class="card-body p-5 text-center">
    <div class="mb-4">
      <i class="fas fa-exclamation-triangle text-warning" style="font-size: 5rem;"></i>
    </div>
    
    <h2 class="card-title mb-4"><%= title %></h2>
    
    <p class="fs-5 mb-5"><%= message %></p>
    
    <% if (error && error.stack && process.env.NODE_ENV === 'development') { %>
      <div class="alert alert-danger text-start">
        <h4 class="alert-heading">错误详情</h4>
        <pre><%= error.stack %></pre>
      </div>
    <% } %>
    
    <div class="mt-4">
      <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">
        <i class="fas fa-arrow-left me-2"></i>返回上一页
      </a>
      <a href="/" class="btn btn-primary">
        <i class="fas fa-home me-2"></i>返回首页
      </a>
    </div>
  </div>
</div> 
