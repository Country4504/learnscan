<script>
  // 初始化问卷表单
  document.addEventListener('DOMContentLoaded', function() {
    const surveyForm = document.getElementById('surveyForm');
    const progressBar = document.getElementById('surveyProgress');
    const questionGroups = document.querySelectorAll('.question-group');
    const totalQuestions = 40; // 总问题数
    
    // 更新进度条
    function updateProgress() {
      const answeredInputs = surveyForm.querySelectorAll('input[type="radio"]:checked');
      const answeredCount = answeredInputs.length;
      const percentage = Math.round((answeredCount / totalQuestions) * 100);
      
      progressBar.style.width = percentage + '%';
      progressBar.setAttribute('aria-valuenow', percentage);
      progressBar.textContent = percentage + '%';
    }
    
    // 为所有单选按钮添加事件监听
    const radioInputs = surveyForm.querySelectorAll('input[type="radio"]');
    radioInputs.forEach(input => {
      input.addEventListener('change', updateProgress);
    });
    
    // 初始化进度
    updateProgress();
    
    // 表单提交前确认
    surveyForm.addEventListener('submit', function(event) {
      const answeredInputs = surveyForm.querySelectorAll('input[type="radio"]:checked');
      if (answeredInputs.length < totalQuestions) {
        event.preventDefault();
        if (!confirm(`你还有${totalQuestions - answeredInputs.length}个问题未回答，确定要提交吗？`)) {
          return false;
        }
      }
    });
  });
</script> 
